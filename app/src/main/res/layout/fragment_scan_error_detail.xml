<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#003BDD"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="30dp"
        android:paddingBottom="15dp"
        android:layout_marginTop="40dp">

        <com.q8safemobile.views.TextViewCustomFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Found 1 Issue"
            android:id="@+id/foundIssue"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:visibility="visible"
            app:fontName="Montserrat-Bold.otf" />

        <Button
            android:id="@+id/btn_scan_again"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="SCAN AGAIN"
            android:textColor="@color/TextColorBlack"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible"
            android:layout_marginTop="5dp"/>

        <com.q8safemobile.views.TextViewCustomFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:id="@+id/subHeading"
            android:text="Tap on the resolve button to get fixed"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:visibility="visible"
            app:fontName="Montserrat-Bold.otf"
            android:layout_marginTop="5dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ll_top"
        android:padding="10dp">

        <com.q8safemobile.views.TextViewCustomFont
            android:id="@+id/txt_error_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Unknown Source Enabled"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/TextColorBlack"
            android:visibility="visible"
            app:fontName="Montserrat-Medium.otf"
            android:layout_marginTop="5dp"/>

        <com.q8safemobile.views.TextViewCustomFont
            android:id="@+id/txt_error_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Q8 Security Suggests you to Change the security Setting Android Apps From Unknown Sources May HArm Your Device."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/TextColorBlack"
            android:visibility="gone"
            app:fontName="Montserrat-Regular.otf"
            android:layout_marginTop="5dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent" />



    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <Button
            android:id="@+id/btn_resolve"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="RESOLVE"
            android:textColor="@color/white"
            android:background="#003BDD"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"/>

        <Button
            android:id="@+id/btn_ignore"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="IGNORE"
            android:textColor="@color/white"
            android:background="#D80001"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>


</RelativeLayout>
